{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Gallery</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Shared</th>
                <td>{{ entity.shared }}</td>
            </tr>
            <tr>
                <th>Liked</th>
                <td>{{ entity.liked }}</td>
            </tr>
            <tr>
                <th>Commented</th>
                <td>{{ entity.commented }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ entity.token }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ entity.path }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('gallery') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('gallery_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
