{% extends 'LcLcBundle:Default:userlayout.html.twig' %}
{%block leftcontent%}
	{{ include ('LcLcBundle:Default:userleftbar.profile.html.twig') }}
{% endblock %}
{%block content%}
				<div class="col-sm-7 column">
				{% if (app.session.flashbag.get('notice') is not empty) %}
				<center id="message-session">
				<div class="alert alert-success lebar" role="alert"> 
					Data profile mu berhasil diubah ! :D
				</div>
				<hr />
				</center>
				{% endif %}
						<div class="row">
							<div class="panel panel-success">
								<div class="panel-heading panel-success">
									<i class="glyphicon glyphicon-user"></i>&nbsp;Pengelolaan Data Profile Anda
								</div>
								<div class="panel-body apanel-body">
									<div class="media">
										<div class="media-body f-feel">
											{{ form_start(form) }}
												{{ form_errors(form) }}
											  <div class="form-group form-group-sm">
												<label class="col-sm-3 control-label" for="formGroupInputSmall">Nama Lengkap</label>
												<div class="col-sm-9">
												  {{ form_widget(form.name) }}
												</div>
												  {{ form_errors(form.name) }}
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-3 control-label" for="formGroupInputSmall">Tentang Anda</label>
												<div class="col-sm-9">
												  {{ form_widget(form.about) }}
												</div>
												  {{ form_errors(form.about) }}
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-3 control-label" for="formGroupInputSmall">Alamat lengkap</label>
												<div class="col-sm-9">
												  {{ form_widget(form.address) }}
												</div>
												  {{ form_errors(form.address) }}
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-3 control-label" for="formGroupInputSmall">Hobby</label>
													<div class="col-sm-9">
														{{ form_widget(form.hobby) }}
												</div>
												  {{ form_errors(form.hobby) }}
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-3 control-label" for="formGroupInputSmall">Pekerjaan</label>
													<div class="col-sm-9">
														{{ form_widget(form.job) }}
												</div>
												  {{ form_errors(form.job) }}
											  </div>
											  
											  <div class="form-group form-group-sm">
												<label class="col-sm-3 control-label" for="formGroupInputSmall">Gaji</label>
													<div class="col-sm-9">
														{{ form_widget(form.sallary) }}
												</div>
												  {{ form_errors(form.sallary) }}
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-3 control-label" for="formGroupInputSmall">Pendidikan</label>
													<div class="col-sm-9">
														{{ form_widget(form.education) }}
												</div>
												  {{ form_errors(form.education) }}
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-3 control-label" for="formGroupInputSmall">Provinsi</label>
													<div class="col-sm-9">
														{{ form_widget(form.province) }}
												</div>
												  {{ form_errors(form.province) }}
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-3 control-label" for="formGroupInputSmall">Kabupaten/Kota</label>
													<div class="col-sm-9">
														{{ form_widget(form.city) }}
												</div>
												  {{ form_errors(form.city) }}
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-3 control-label" for="formGroupInputSmall">Di mana Anda bertempat tinggal?</label>
													<div class="col-sm-9">
														{{ form_widget(form.lived) }}
												</div>
												  {{ form_errors(form.lived) }}
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-3 control-label" for="formGroupInputSmall">Apakah Anda perokok?</label>
													<div class="col-sm-9">
														{{ form_widget(form.smoking) }}
												</div>
												  {{ form_errors(form.smoking) }}
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-3 control-label" for="formGroupInputSmall">Status pernikahan Anda</label>
													<div class="col-sm-9">
														{{ form_widget(form.status) }}
												</div>
												  {{ form_errors(form.status) }}
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-3 control-label" for="formGroupInputSmall">Agama</label>
													<div class="col-sm-9">
														{{ form_widget(form.religy) }}
												</div>
												  {{ form_errors(form.religy) }}
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-3 control-label" for="formGroupInputSmall">Apakah Anda meminum minuman beralkohol?</label>
													<div class="col-sm-9">
														{{ form_widget(form.alcoholic) }}
												</div>
												  {{ form_errors(form.alcoholic) }}
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-3 control-label" for="formGroupInputSmall">Kapan Anda berencana akan menikah?</label>
													<div class="col-sm-9">
														{{ form_widget(form.plan) }}
												</div>
												  {{ form_errors(form.plan) }}
											  </div>
											  
											  <div class="form-group form-group-sm pull-right">
													<div class="col-sm-9">
														<button type="submit" class="btn btn-primary btn-feel"><i class="glyphicon glyphicon-floppy-disk"></i> &nbsp;&nbsp;Update</button>
													</div>
											  </div>
											{{ form_row(form._token) }}
											{{ form_end(form) }}
											<br /><br />
										</div>
									</div>
								</div>
							</div>
						</div>
				</div>

{% endblock %}
{%block rightcontent%}
	{{ include ('LcLcBundle:Default:userrightbar.html.twig') }}
{% endblock %}
