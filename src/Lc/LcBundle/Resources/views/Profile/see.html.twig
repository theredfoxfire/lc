{% extends 'LcLcBundle:Default:userlayout.html.twig' %}
{%block leftcontent%}
	{{ include ('LcLcBundle:Default:userleftbar.html.twig') }}
{% endblock %}
{%block content%}
				<div class="col-sm-7 column">
						<div class="row">
							<div class="panel panel-success">
								<div class="panel-heading panel-success">
									<i class="glyphicon glyphicon-user"></i>&nbsp;Preview Akun {{ entity.name }}
								</div>
											<center>
											<img class="thumbnail" src="{{ asset('web/uploads/users/index_') }}{{ entity.user.foto }}" alt="{{ entity.name }}">
											{% if friend and friend.isconfirmed == 0 %}
												<div class="label label-success">Permintaan pertemanan sudah dikirim</div>
											{% elseif friend and friend.isconfirmed == 1 %}
												<div class="label label-success">Dia sudah berteman denganmu</div><br /><br / >
											{% else %}
												<a class="label label-primary" data-toggle="tooltip" data-placement="top" title="Kenal sama Dia?" href="{{ path('friend_create', {'token' : entity.user.token}) }}"> Kenalan</a>
											{% endif %}
											</center>
								<hr />
								<center>
								<div class="table-responsive">
									<table width="600px">
										<tr class="profile"><td valign="top"> Nama Lengkap</td><td valign="top">:</td><td valign="top">{{ entity.name }}</td></tr>
										<tr class="profile"><td valign="top"> Tentang saya</td><td valign="top">:</td><td valign="top">{{ entity.about }}</td></tr>
										<tr class="profile"><td valign="top"> Alamat</td><td valign="top">:</td><td valign="top">{{ entity.address }}</td></tr>
										<tr class="profile"><td valign="top"> Status pernikahan</td><td valign="top">:</td><td valign="top">{{ entity.status }}</td></tr>
										<tr class="profile"><td valign="top"> Pekerjaan</td><td valign="top">:</td><td valign="top">{{ entity.job }}</td></tr>
										<tr class="profile"><td valign="top"> Pendidikan</td><td valign="top">:</td><td valign="top">{{ entity.education }}</td></tr>
										<tr class="profile"><td valign="top"> Agama</td><td valign="top">:</td><td valign="top">{{ entity.religy }}</td></tr>
									</table>
								</div>
								</center>
								<br>
							</div>
						</div>
				</div>

{% endblock %}
{%block rightcontent%}
	{{ include ('LcLcBundle:Default:userrightbar.html.twig') }}
{% endblock %}
