{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Chat list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_1</th>
                <th>Id_2</th>
                <th>Message</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Token</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('chat_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.id1 }}</td>
                <td>{{ entity.id2 }}</td>
                <td>{{ entity.message }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.token }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('chat_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('chat_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('chat_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
