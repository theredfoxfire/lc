{% extends 'LcLcBundle:Default:userlayout.html.twig' %}
{%block leftcontent%}
	{{ include ('LcLcBundle:Default:userleftbar.html.twig') }}
{% endblock %}
{%block content%}
				
				<div class="col-sm-7 column">
				{% if (app.session.flashbag.get('notice') is not empty) %}
				<center id="message-session">
				<div class="alert alert-success lebar" role="alert"> 
					Status mu sudah diposting ! :D
				</div>
				<hr />
				</center>
				{% endif %}
						<div class="row">
							<div class="panel panel-success">
								
								<div class="panel-body apanel-body">
									<div class="media">
										<div class="media-left pull-left">
											<img src="{{ asset('uploads/users/mini_') }}{{ app.user.foto }}" alt="{% if app.user.profile.name is defined %}{{ app.user.profile.name }} {% else %} {{ app.user.email }} {% endif %}" class="img-rounded">
										</div>
										<div class="media-body">
											 <div class="col-md-12">
												{{ form_start(form) }}
												{{ form_errors(form) }}
													<div class="form-group">
													{{ form_widget(form.feel) }}
													</div>
													{{ form_errors(form.feel) }}
													
													Tambahkan foto:{{ form_widget(form.file) }}
													{{ form_errors(form.file) }}
													<div class="form-group right">
														<button type="submit" class="btn btn-primary btn-feel"><i class="glyphicon glyphicon-send"></i> &nbsp;Posting</button>
													</div>
												{{ form_row(form._token) }}
												{{ form_end(form) }}
											</div><!-- /.col-lg-6 -->
										</div>
									</div>
								</div>
							</div>
						</div>
						{% for entity in entities %}
						<div class="row">
							<div class="panel panel-success">
								<div class="panel-heading panel-success right">
									<div class="media">
										<div class="media-left pull-left knowing">
											<h5>{{ entity.user.profile.name }}</h5>
										</div>
										<div class="media-body">
											<h5 class="media-right pull-right">
											<a class="a-act" href="{{ path('feeling_show', {'token': entity.token }) }}" data-toggle="tooltip" data-placement="top" title="Tulis balasan"><i class="glyphicon glyphicon-comment"></i></a>
											</h5>
											<h5 class="media-right pull-right">
											{% set lk = 0 %}
											{% for like in entity.flike %}
												{% if like.user.id == app.user.id %}
													{% set lk = 1 %}
												{% endif %}
											{% endfor %}
											{% if lk == 0 %}
											<a class="a-act" href="{{ path('flike_create', {'feel': entity.token, 'page': '2' }) }}" data-toggle="tooltip" data-placement="top" title="Beri simpati"><i class="glyphicon glyphicon-thumbs-up"></i></a>
											{% endif %}
											</h5>
										</div>
									</div>
								</div>
								<a href="{{ path('feeling_show', {'token': entity.token }) }}">
								<div class="panel-body apanel-body">
									<div class="media">
										<div class="media-left pull-left">
											<img src="{{ asset('uploads/users/mini_') }}{{ entity.user.foto }}" alt="{{ entity.user.profile.name }}" class="img-rounded">
										</div>
										<div class="media-body f-feel">
											<h5 class="media-right">{{ entity.feel }}</h5>
											<div class='pull-right created_at'><small class="text-muted"> <i class="glyphicon glyphicon-time"></i> <i>{{ entity.createdAt | date('d-m-Y H:i:s') }}</i></small></div>
										</div>
									</div>
								</div>
								
								{% if entity.foto %}
								<div class="panel-footer">
										<center><img src="{{ asset('uploads/feels/feel_') }}{{ entity.foto }}" alt="{{ entity.user.profile.name }}" class="img-responsive"></center>
								</div>
								{% endif %}
								</a>
							</div>
						</div>
						{% endfor %}
						<div class="text-center">
							{% if c > 25 %}
								Halaman: <b>{{ knp_pagination_render(entities) }}</b>
							{% endif %}
						</div>
				</div>
<script type="text/javascript" src="{{ asset('bundles/lclc/js/validate-image-feel.js') }}"></script>
{% endblock %}
{%block rightcontent%}
	{{ include ('LcLcBundle:Default:userrightbar.html.twig') }}
{% endblock %}
