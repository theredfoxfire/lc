{% extends 'LcLcBundle:Default:userlayout.html.twig' %}
{%block leftcontent%}
	{{ include ('LcLcBundle:Default:userleftbar.html.twig') }}
{% endblock %}
{%block content%}
<link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.9/summernote.css" rel="stylesheet">
				<div class="col-sm-7 column">
				{% if (app.session.flashbag.get('notice') is not empty) %}
				<center id="message-session">
				<div class="alert alert-success lebar" role="alert">
					Komentar mu sudah diposting ! :D
				</div>
				<hr />
				</center>
				{% endif %}
						<div class="row">
							<div class="panel panel-success">
								<div class="panel-heading panel-success right">
									<div class="media">
										<div class="media-left pull-left knowing">
											<h5>
												{{ entity.user.profile.name }}
												{% if entity.user.isverified == 1 %}
													<i style="color: #00838F;"><i class="glyphicon glyphicon-ok-circle"></i></i>
												{% endif %}
											</h5>
										</div>
										<div class="media-body">
											<h5 class="media-right pull-right">
											<span class="counter-activity">{{ entity.fcomment|length > 0 ? entity.fcomment|length|number_format(0, ',', ' ') : '' }}</span>
											<a class="a-act" href="#comments" onclick="setFocus()" data-toggle="tooltip" data-placement="top" title="Tulis balasan"><i class="glyphicon glyphicon-comment"></i></a>
											</h5>
											<h5 class="media-right pull-right">
											<span class="counter-activity">{{ entity.fshare|length > 0 ? entity.fshare|length|number_format(0, ',', ' ') : '' }}</span>
											<a class="a-act" href="{{ path('fshare_create', {'feel': entity.token }) }}" data-toggle="tooltip" data-placement="top" title="Re-Post"><i class="glyphicon glyphicon-retweet"></i></a>
											</h5>
											<h5 class="media-right pull-right">
											{% set lk = 0 %}
											{% for like in entity.flike %}
												{% if like.user.id == app.user.id %}
													{% set lk = 1 %}
												{% endif %}
											{% endfor %}
											{% if lk == 0 %}
											<span class="counter-activity">{{ entity.flike|length > 0 ? entity.flike|length|number_format(0, ',', ' ') : '' }}</span>
											<a class="a-act" href="{{ path('flike_create', {'feel': entity.token, 'page': '1' }) }}" data-toggle="tooltip" data-placement="top" title="Beri simpati"><i class="glyphicon glyphicon-thumbs-up"></i></a>
											{% else %}
											<span class="counter-activity">{{ entity.flike|length > 0 ? entity.flike|length|number_format(0, ',', ' ') : '' }}</span>
											<i class="glyphicon glyphicon-thumbs-up disabled-like a-act"></i>
											{% endif %}
											</h5>
										</div>
									</div>
								</div>
								<div class="panel-body">
									<div class="media">
										<div class="media-left pull-left">
											<img src="{{ asset('web/uploads/users/mini_') }}{{ entity.user.foto }}" alt="{{ entity.user.profile.name }}">
										</div>
										<div class="media-body">
											{% if entity.shared %}
												<a href="{{ path('profile_see', {'token': entity.parent.user.token }) }}">
													<i class="glyphicon glyphicon-retweet"></i> {{ entity.parent.user.profile.name }}
													{% if entity.parent.user.isverified == 1 %}
														<i style="color: #00838F;"><i class="glyphicon glyphicon-ok-circle"></i></i>
													{% endif %}
												</a>
											{% endif %}
											<h5 class="media-right">{{ entity.feel|raw }}</h5>
											<div class='pull-right created_at'><small class="text-muted"> <i class="glyphicon glyphicon-time"></i> <i>{{ entity.createdAt | date('d-m-Y H:i:s') }}</i></small></div>
										</div>
									</div>
								</div>
								{% if entity.foto %}
								<div class="panel-footer panel-image">
										<center><img src="{{ asset('web/uploads/feels/feel_') }}{{ entity.foto }}" alt="{{ entity.user.profile.name }}" class="img-responsive img-full"></center>
								</div>
								{% endif %}
							</div>
							{% for comment in comments|sort %}
											{% if entity.user.id == app.user.id %}
													<div class="panel panel-success apanel-body margin-feel">
														<div class="panel-body">
															<div class="media">
																<a class="media-left pull-left" href="#">
																	<img src="{{ asset('web/uploads/users/mini_') }}{{ comment.user.foto }}" class="img-rounded" alt="{{ comment.user.profile.name }}">
																</a>
																<div class="media-body">
																	<h5 class="media-right">{{ comment.comment|raw }}</h5>
																</div>
															</div>
														</div>
														<div class="panel-footer">
															{{ comment.user.profile.name }}
															{% if comment.user.isverified == 1 %}
																<i style="color: #00838F;"><i class="glyphicon glyphicon-ok-circle"></i></i>
															{% endif %}
															<div class="pull-right"> <small class="text-muted"> <i class="glyphicon glyphicon-time"></i> <i>{{ comment.createdAt | date('d-m-Y H:i:s') }}</i></small></div>
														</div>
													</div>
											{% else %}
												{% if (comment.user.id == app.user.id) or (comment.user.id == entity.user.id)  %}
													<div class="panel panel-success apanel-body  margin-feel">
														<div class="panel-body">
															<div class="media">
																<a class="media-left pull-left" href="#">
																	<img src="{{ asset('web/uploads/users/mini_') }}{{ comment.user.foto }}" class="img-rounded" alt="{{ comment.user.profile.name }}">
																</a>
																<div class="media-body">
																	<h5 class="media-right">{{ comment.comment|raw }}</h5>
																</div>
															</div>
														</div>
														<div class="panel-footer">
															{{ comment.user.profile.name }}
															{% if comment.user.isverified == 1 %}
																<i style="color: #00838F;"><i class="glyphicon glyphicon-ok-circle"></i></i>
															{% endif %}
															<div class="pull-right"> <small class="text-muted"> <i class="glyphicon glyphicon-time"></i> <i>{{ comment.createdAt | date('d-m-Y H:i:s') }}</i></small></div>
														</div>
													</div>
												{% endif %}
											{% endif %}
											{% endfor %}

											<div class="text-center">
												{% if c > 25 %}
													{{ knp_pagination_render(comments) }}</b>
												{% endif %}
											</div>
											<div class="panel panel-success apanel-body" id="comments">
												<div class="panel-body">
													<div class="media">
														<a class="media-left pull-left" href="#">
															<img src="{{ asset('web/uploads/users/mini_') }}{{ app.user.foto }}" class="img-rounded" alt="{{ app.user.profile.name }}">
														</a>
														<div class="media-body">
														{{ form_start(form) }}
														{{ form_errors(form) }}
															<div class="form-group">
															{{ form_widget(form.comment) }}
															</div>
															{{ form_errors(form.comment) }}
															<div class="form-group right">
																<button onclick="return checkLength()" type="submit" class="btn btn-primary btn-feel"><i class="glyphicon glyphicon-send"></i> &nbsp;Kirim</button>
															</div>
														{{ form_row(form._token) }}
														{{ form_end(form) }}
														</div>
													</div>
												</div>
											</div>
						</div>

				</div>
<script src="{{ asset('web/bundles/lclc/js/summernote.js') }}"></script>
<script>
$(document).ready(function() {
    $('#lc_lcbundle_fcomment_comment').summernote({
				placeholder: 'bagikan sesuatu...',
				tooltip: false,
				height: 100,
				toolbar: [
			    // [groupName, [list of button]]
			    ['style', ['bold', 'italic', 'underline']],
			    ['font', ['strikethrough', 'superscript', 'subscript']],
			    ['para', ['ul', 'ol',]]
			  ]
		});
});
</script>
<script>
function setFocus(){
    document.getElementByClass("note-editable").focus();
}
function checkLength(){
    var textbox = document.getElementById("lc_lcbundle_fcomment_comment");
		if (textbox.value.length == 0) {
			alert('Tuliskan sesuatu, sebelum posting.');
			return false;
		}
    else if(textbox.value.length <= 850){
        return true;
    }
    else{
        alert("Postingan tidak boleh melibihi 850 karater.");
				return false;
    }
}
</script>
{% endblock %}
{%block rightcontent%}
	{{ include ('LcLcBundle:Default:userrightbar.html.twig') }}
{% endblock %}
