{% extends 'LcLcBundle:Default:userlayout.html.twig' %}
{%block leftcontent%}
	{{ include ('LcLcBundle:Default:userleftbar.html.twig') }}
{% endblock %}
{%block content%}

				<div class="col-sm-7 column">
						
						<div class="row">
							<div class="panel panel-success">
								<div class="panel-heading panel-success right">
									<div class="media">
										<div class="media-left pull-left knowing">
											<h5>{{ entity.user.profile.name }}</h5>
										</div>
										<div class="media-body">
											<h5 class="media-right pull-right">
											<a class="a-act" href="#comment" onclick="setFocus()" data-toggle="tooltip" data-placement="top" title="Tulis balasan"><i class="glyphicon glyphicon-comment"></i></a>
											</h5>
											<h5 class="media-right pull-right">
											<a class="a-act" href="{{ path('flike_create', {'feel': entity.token, 'page': '1' }) }}" data-toggle="tooltip" data-placement="top" title="Beri simpati"><i class="glyphicon glyphicon-thumbs-up"></i></a>
											</h5>
										</div>
									</div>
								</div>
								<div class="panel-body">
									<div class="media">
										<div class="media-left pull-left">
											<img src="{{ asset('uploads/users/mini_') }}{{ entity.user.foto }}" alt="{{ entity.user.profile.name }}">
										</div>
										<div class="media-body">
											<h5 class="media-right">{{ entity.feel }}</h5>
											<div class='pull-right created_at'><small class="text-muted"> <i class="glyphicon glyphicon-time"></i> <i>{{ entity.createdAt | date('d-m-Y H:i:s') }}</i></small></div><br>
											<hr />
											{% for comment in comments|sort %}
											{% if entity.user.id == app.user.id %}
													<div class="panel panel-success apanel-body">
														<div class="panel-body">
															<div class="media">
																<a class="media-left pull-left" href="#">
																	<img src="{{ asset('uploads/users/mini_') }}{{ comment.user.foto }}" class="img-rounded" alt="{{ comment.user.profile.name }}">
																</a>
																<div class="media-body">
																	<h5 class="media-right">{{ comment.comment }}</h5>
																</div>
															</div>
														</div>
														<div class="panel-footer">
															{{ comment.user.profile.name }} <div class="pull-right"> <small class="text-muted"> <i class="glyphicon glyphicon-time"></i> <i>{{ comment.createdAt | date('d-m-Y H:i:s') }}</i></small></div>
														</div>
													</div>
											{% else %}
												{% if (comment.user.id == app.user.id) or (comment.user.id == entity.user.id)  %}
													<div class="panel panel-success apanel-body">
														<div class="panel-body">
															<div class="media">
																<a class="media-left pull-left" href="#">
																	<img src="{{ asset('uploads/users/mini_') }}{{ comment.user.foto }}" class="img-rounded" alt="{{ comment.user.profile.name }}">
																</a>
																<div class="media-body">
																	<h5 class="media-right">{{ comment.comment }}</h5>
																</div>
															</div>
														</div>
														<div class="panel-footer">
															{{ comment.user.profile.name }} <div class="pull-right"> <small class="text-muted"> <i class="glyphicon glyphicon-time"></i> <i>{{ comment.createdAt | date('d-m-Y H:i:s') }}</i></small></div>
														</div>
													</div>
												{% endif %}
											{% endif %}
											{% endfor %}
						
						
											<div class="panel panel-success apanel-body" id="comments">
												<div class="panel-body">
													<div class="media">
														<a class="media-left pull-left" href="#">
															<img src="{{ asset('uploads/users/mini_') }}{{ app.user.foto }}" class="img-rounded" alt="{{ app.user.profile.name }}">
														</a>
														<div class="media-body">
														{{ form_start(form) }}
														{{ form_errors(form) }}
															<div class="form-group">
															{{ form_widget(form.comment) }}
															</div>
															{{ form_errors(form.comment) }}
															<div class="form-group right">
																<button type="submit" class="btn btn-primary btn-feel"><i class="glyphicon glyphicon-send"></i> &nbsp;Kirim</button>
															</div>
														{{ form_row(form._token) }}
														{{ form_end(form) }}
														</div>
													</div>
												</div>
											</div>
						
										</div>
									</div>
								</div>
							</div>
						</div>
						
				</div>
<script>
function setFocus(){
    document.getElementById("lc_lcbundle_fcomment_comment").focus();
}
</script>
{% endblock %}
{%block rightcontent%}
	{{ include ('LcLcBundle:Default:userrightbar.html.twig') }}
{% endblock %}
