{% extends 'LcLcBundle:Default:userlayout.html.twig' %}
{%block leftcontent%}
	{{ include ('LcLcBundle:Default:userleftbar.html.twig') }}
{% endblock %}
{%block content%}
				<div class="col-sm-7 column">

						<div class="row">
							<div class="panel panel-success">
								<div class="panel-heading panel-success">
									<div class="media">
										<div class="media-left pull-left knowing">
											<img src="{{ asset('web/uploads/users/mini_') }}{{ app.user.foto }}" alt="{{ app.user.profile.name }}" class="img-rounded a-act">
											Daftar Temanmu
										</div>
										<div class="media-body">
											<h5 class="media-right pull-right">
												<a class="a-act" href="#" data-toggle="tooltip" data-placement="top" title="Daftar Temanmu"><i class="glyphicon glyphicon-user knowing"></i></a>
											</h5>
										</div>
									</div>
								</div>
								{% set fr = 0 %}
									{% for entity in entities %}
									<div class="panel-body apanel-body p-border">
										<div class="media">
											<div class="media-left pull-left">
											<a class="thumbnail" href="{{ path('profile_see', {'token': entity.user1.token }) }}">
												<img src="{{ asset('web/uploads/users/mini_') }}{{ entity.user1.foto }}" alt="{{ entity.user1.profile.name }}" class="img-rounded">
											</a>
											</div>
											<div class="media-body f-feel">
												<h4 class="media-right">{{ entity.user1.profile.name }}</h4>
												<a class="a-act pull-right" onclick="tanya('{{ entity.user1.profile.name }}','{{ entity.token }}')" href="#" data-toggle="tooltip" data-placement="top" title="Blokir"><i class="glyphicon glyphicon-eye-close"></i></a>
												<a class="a-act pull-right" href="{{ path('chat_show', {'token': entity.user1.token }) }}" data-toggle="tooltip" data-placement="top" title="Kirim pesan"><i class="glyphicon glyphicon-envelope"></i></a>
											</div>
										</div>
									</div>
								{% set fr = 1 %}
								{% endfor %}
								<div class="text-center">
									{% if c > 25 %}
										{{ knp_pagination_render(entities) }}</b>
									{% endif %}
								</div>
								{% if fr == 0 %}
									<div class="panel-body apanel-body p-border">
										<div class="media">
											<div class="media-left pull-left">
											</div>
											<div class="media-body f-feel">
												<h4 class="media-right">Sementara ini masih belum ada.</h4>
											</div>
										</div>
									</div>
								{% endif %}
							</div>
						</div>

				</div>
<script>
	function tanya(nama,token){
		var con = confirm('Kamu yakin akan memblokir '+nama+'?');

		if (con){
			window.open('{{ app.request.getBaseURL() }}/heaven/friend/'+token+'/block', '_top');
		}
	}
</script>
{% endblock %}
{%block rightcontent%}
	{{ include ('LcLcBundle:Default:userrightbar.html.twig') }}
{% endblock %}
