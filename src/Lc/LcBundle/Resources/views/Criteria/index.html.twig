{% extends 'LcLcBundle:Default:userlayout.html.twig' %}
{%block leftcontent%}
	{{ include ('LcLcBundle:Default:userleftbar.profile.html.twig') }}
{% endblock %}
{%block content%}
				<div class="column">
						<div class="row">
							<div class="panel panel-success">
								<div class="panel-heading panel-success">
									<i class="glyphicon glyphicon-user"></i>&nbsp;Pengelolaan Data Kriteria Anda
								</div>
								<div class="panel-body apanel-body">
									<div class="media">
										<div class="media-body f-feel">
											<form class="form-horizontal">
											  <div class="form-group form-group-sm">
												<label class="col-sm-2 control-label" for="formGroupInputSmall">Username</label>
												<div class="col-sm-10">
												  <input class="form-control" type="text" id="formGroupInputLarge" placeholder="Username">
												</div>
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-2 control-label" for="formGroupInputSmall">Email</label>
												<div class="col-sm-10">
												  <input class="form-control" type="text" id="formGroupInputSmall" placeholder="Email">
												</div>
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-2 control-label" for="formGroupInputSmall">Phone</label>
												<div class="col-sm-10">
												  <input class="form-control" type="text" id="formGroupInputSmall" placeholder="Phone">
												</div>
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-2 control-label" for="formGroupInputSmall">Pekerjaan</label>
													<div class="col-sm-10">
														<select class="form-control">
														  <option>1</option>
														  <option>2</option>
														  <option>3</option>
														  <option>4</option>
														  <option>5</option>
														</select>
													</div>
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-2 control-label" for="formGroupInputSmall">Penghasilan</label>
													<div class="col-sm-10">
														<select class="form-control">
														  <option>1</option>
														  <option>2</option>
														  <option>3</option>
														  <option>4</option>
														  <option>5</option>
														</select>
													</div>
											  </div>
											  <div class="form-group form-group-sm">
												<label class="col-sm-2 control-label" for="formGroupInputSmall">Tentang Anda</label>
												<div class="col-sm-10">
													<textarea class="form-control" id="formGroupInputSmall" placeholder="Tentang Anda" rows="5"></textarea>
												</div>
											  </div>
											  <div class="form-group form-group-sm pull-right">
													<div class="col-sm-10">
														<button type="submit" class="btn btn-primary btn-feel"><i class="glyphicon glyphicon-floppy-disk"></i> &nbsp;&nbsp;Update</button>
													</div>
											  </div>
											</form>
											<br /><br />
										</div>
									</div>
								</div>
							</div>
						</div>
				</div>
{% endblock %}
{%block rightcontent%}
	{{ include ('LcLcBundle:Default:userrightbar.html.twig') }}
{% endblock %}
