{% extends 'LcLcBundle:Default:userlayout.html.twig' %}
{%block leftcontent%}
	{{ include ('LcLcBundle:Default:userleftbar.profile.html.twig') }}
{% endblock %}
{%block content%}
				<div class="col-sm-7 column">
						<div class="row">
							<div class="panel panel-success">
								<div class="panel-heading panel-success">
									<i class="glyphicon glyphicon-user"></i>&nbsp;Pengelolaan Data Akun Anda
								</div>
								<div class="panel-body apanel-body">
									<div class="media">
										<div class="media-body f-feel">
											{{ form_start(form) }}
												{{ form_errors(form) }}
											  <div class="form-group form-group-sm">
												<label class="col-sm-2 control-label" for="formGroupInputSmall">Password lama</label>
												<div class="col-sm-10">
												  {{ form_widget(form.oldPassword) }}
												</div>
												  {{ form_errors(form.oldPassword) }}
											  </div>
											  <br />
											  <div class="form-group form-group-sm">
												<label class="col-sm-2 control-label" for="formGroupInputSmall"></label>
												<div class="col-sm-10">
												  {{ form_widget(form.newPassword) }}
												</div>
												  {{ form_errors(form.newPassword) }}
											  </div>
											  
											  <div class="form-group form-group-sm pull-right">
													<div class="col-sm-10">
													<br><br>
														<button type="submit" class="btn btn-primary btn-feel"><i class="glyphicon glyphicon-floppy-disk"></i> &nbsp;&nbsp;Update</button>
													</div>
											  </div>
												{{ form_row(form._token) }}
											{{ form_end(form) }}
											<br /><br />
										</div>
									</div>
								</div>
							</div>
						</div>
				</div>
{% endblock %}
{%block rightcontent%}
	{{ include ('LcLcBundle:Default:userrightbar.html.twig') }}
{% endblock %}
