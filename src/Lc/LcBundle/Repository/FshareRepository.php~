<?php

namespace Lc\LcBundle\Repository;

use Doctrine\ORM\EntityRepository;


use Lc\LcBundle\Entity\Fshare;
/**
 * FshareRepository
 *
 * This class was generated by the Doctrine ORM. Add your own custom
 * repository methods below.
 */
class FshareRepository extends EntityRepository
{
	public function checkShared($user = null, $feel = null){
		$query = $this->createQueryBuilder('l')
		->where('l.user = :uid')
		->setParameter('uid', $user)
		->andWhere('l.feeling = :fe')
		->setParameter('fe', $feel)
		->setMaxResults(1)
		->getQuery();
		
		try{
            $fshare = $query->getSingleResult();
        } catch(\Doctrine\Orm\NoResultException $e){
            $fshare = null;
        }
		return $flike;
	}
}
